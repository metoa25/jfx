<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.mateo.jfx.OptionsController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Button text="Add Transaction" onAction="#handleAddTransaction" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Button text="View Finances" onAction="#handleViewFinances" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Button text="Manage Transactions" onAction="#handleManageTransactions" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>
